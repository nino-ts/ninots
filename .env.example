# =================
# APP CONFIGURATION
# =================
APP_NAME=ninots
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0

# =================
# SERVER CONFIGURATION
# =================
PORT=3000
HOST=localhost
API_PREFIX=/api/v1

# =================
# SECURITY
# =================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================
# DATABASE CONFIGURATION
# =================
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ninots
DB_USERNAME=
DB_PASSWORD=
DB_SSL=false
DB_LOGGING=false

# =================
# REDIS CONFIGURATION
# =================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================
# EMAIL CONFIGURATION
# =================
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@ninots.dev
MAIL_FROM_NAME=Ninots

# =================
# LOGGING
# =================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# =================
# MONITORING
# =================
METRICS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# =================
# DEVELOPMENT
# =================
SWAGGER_ENABLED=true
HOT_RELOAD=true